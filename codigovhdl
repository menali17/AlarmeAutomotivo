library IEEE;
use IEEE.STD_LOGIC_1164.ALL;

entity alarme is
    Port (
        porta     : in STD_LOGIC;  -- Entrada da porta do motorista (ativa em nível baixo)
        ignicao   : in STD_LOGIC;  -- Entrada da ignição (ativa em nível baixo)
        farol     : in STD_LOGIC;  -- Entrada dos faróis (ativa em nível baixo)
        alarmeSom : out STD_LOGIC  -- Saída do alarme
    );
end alarme;

architecture Behavioral of alarme is
begin
    process(porta, ignicao, farol)
    begin
        -- Condição 1: Farol ligado (not farol) e ignição desligada (ignicao)
        -- Condição 2: Porta aberta (not porta) e ignição ligada (not ignicao)
        if ((not farol and ignicao = '1') or (not porta and not ignicao)) then
            alarmeSom <= '1';
        else
            alarmeSom <= '0';
        end if;
    end process;
end Behavioral;
